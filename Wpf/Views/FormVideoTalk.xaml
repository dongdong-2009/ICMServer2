        <Slider Canvas.Top="479" DataContext="{Binding Source={StaticResource Locator}, Path=SpeakerVolumeViewModel}" Minimum="{Binding MinValue}" Maximum="{Binding MaxValue}" Value="{Binding CurrentValue}"/>
